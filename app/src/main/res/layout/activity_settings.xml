<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
            android:id="@+id/settings_period_getvalidtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
            android:id="@+id/settings_period_btscanoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
            android:id="@+id/settings_period_btscanon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
                android:id="@+id/settings_period_posttagdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>

            <Switch
                android:id="@+id/switchSendDataToCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:showText="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
                android:id="@+id/settings_interval_probe_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true" />

            <Switch
                android:id="@+id/switchScanProbe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:textSize="12sp"
                android:showText="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical" />
        </RelativeLayout>

        <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
            android:id="@+id/settings_gateway_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
                android:id="@+id/settings_location_update_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"/>

            <Switch
                android:id="@+id/switchScanLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:textSize="10sp"
                android:showText="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical" />
        </RelativeLayout>

        <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
            android:id="@+id/settings_tag_address_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <com.tagbox.tagboxandroidgateway.CompoundCtrlLabelTextView
            android:id="@+id/settings_lid_tag_address_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <Button android:id="@+id/bt_save_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_save_settings"
            android:onClick="saveApplicationSettings" />-->

    </LinearLayout>

